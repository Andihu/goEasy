<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/order_info_include"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/press">

        <TextView
            android:id="@+id/topayment"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/order_info_topayout"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:background="@drawable/text_bg_full"
            android:clickable="true"
            android:gravity="center"
            android:text="去支付"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/order_info_setposition"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/order_info_topayout"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/write_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/order_info_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13121375238" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_position" />

                <TextView
                    android:id="@+id/order_info_potion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市 朝阳区 太阳宫中路太阳宫大厦 小源科技" />
            </LinearLayout>
        </LinearLayout>


        <RadioGroup
            android:id="@+id/order_info_topayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="14dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="店内支付" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="快递到家" />
        </RadioGroup>

    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xy.rcs.goeasy.widget.ChildLiistView
            android:id="@+id/order_info_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>



</LinearLayout>
