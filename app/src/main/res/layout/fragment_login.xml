<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.LoginFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="6dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tempid5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@drawable/logo2" />

            <TextView
                android:id="@+id/tempid4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tempid5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                android:text="LOGIN"
                android:textSize="25sp" />

            <RelativeLayout
                android:id="@+id/psddenlu"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <AutoCompleteTextView

                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/editext"
                    android:hint="name"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:textColorHint="@color/text_color_02" />

                <AutoCompleteTextView

                    android:id="@+id/password1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/name"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/editext"
                    android:hint="password"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:textColorHint="@color/text_color_02" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/denlu_phone"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/login_phone1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/editext"
                    android:hint="手机号"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:textColorHint="@color/text_color_02" />

                <AutoCompleteTextView
                    android:id="@+id/login_code1"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/login_phone1"
                    android:layout_marginEnd="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/editext"
                    android:hint="验证码"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:textColorHint="@color/text_color_02" />
                <TextView
                    android:id="@+id/register_request_code1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignRight="@+id/login_phone1"
                    android:layout_alignTop="@+id/login_code1"
                    android:background="@drawable/editext_select"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:text="获取验证码" />

            </RelativeLayout>


            <CheckBox
                android:id="@+id/login_checkbox"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_above="@+id/login"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/check_bg_select"
                android:button="@null"
                android:textColorHint="#000000"
                android:visibility="visible" />
            <TextView
                android:layout_alignTop="@+id/login_checkbox"
                android:layout_toRightOf="@+id/login_checkbox"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"/>

            <TextView
                android:id="@+id/login_btn_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/login_checkbox"
                android:layout_marginEnd="50dp"
                android:text="账号登录" />



            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_select"
                android:gravity="center"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="18sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>