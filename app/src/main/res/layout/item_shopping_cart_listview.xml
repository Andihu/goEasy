<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/item_cart_name"
        android:background="@color/split_line_color"/>
    <CheckBox
        android:id="@+id/good_checkbox"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/checkbox_bg"
        android:button="@null"
        android:visibility="gone"
        android:checked="true" />

    <ImageView
        android:id="@+id/item_cart_img"
        android:layout_width="52dp"
        android:layout_marginStart="10dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/good_checkbox"
        android:src="@drawable/scann_bg" />

    <TextView
        android:id="@+id/item_cart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/item_cart_img"
        android:text="iphone6s"
        android:layout_above="@+id/item_cart_size"
        android:textColor="@color/main_text_color"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/item_cart_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/item_cart_name"
        android:text="6s" />
    <TextView
        android:id="@+id/item_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/item_cart_name"
        android:layout_below="@+id/item_cart_size"
        android:textSize="12sp"
        android:textColor="@color/price_color"
        android:text="25ï¿¥"/>
    <ImageView
        android:id="@+id/item_cart_add"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/good_add"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp" />
    <ImageView
        android:id="@+id/item_cart_remove"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/item_cart_good_count"
        android:background="@drawable/good_remove"/>
    <TextView
        android:id="@+id/item_cart_good_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/item_cart_add"/>
</RelativeLayout>
