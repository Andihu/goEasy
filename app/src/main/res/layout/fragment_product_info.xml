<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aeededed"
    tools:context=".fragment.ProductInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <!--android:id="@+id/info_img"-->
            <View
                android:id="@+id/tempid3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/info_img"
                android:background="#e8eaed" />

            <ImageView
                android:id="@+id/info_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/scann_bg" />


            <RelativeLayout

                android:id="@+id/iitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tempid3"
                android:background="#ffffff">

                <LinearLayout
                    android:id="@+id/collation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tempid2"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_price"
                        android:src="@drawable/ic_collation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tempid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tempid1"
                    android:layout_below="@+id/tempid1"
                    android:layout_marginTop="5dp"
                    android:text="超市位置:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tempid2"
                    android:layout_below="@+id/tempid1"
                    android:layout_marginStart="7dp"
                    android:layout_toRightOf="@+id/tempid2"
                    android:text="超市位置:" />

                <TextView
                    android:id="@+id/tempid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/info_name"
                    android:layout_below="@+id/info_name"
                    android:layout_marginTop="3dp"
                    android:text="规格:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tempid1"
                    android:layout_below="@+id/info_name"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="7dp"
                    android:layout_toRightOf="@+id/tempid1"
                    android:text="超市A区1号" />

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/info_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tempid1"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:text="70%"
                    android:textColor="#ffde00"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/info_discount"
                    android:layout_marginStart="0dp"
                    android:layout_toLeftOf="@+id/info_discount"
                    android:text="折扣：" />

                <TextView
                    android:id="@+id/info_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/info_name"
                    android:layout_below="@id/tempid2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:text="100快"
                    android:textColor="#bb5a2c" />


            </RelativeLayout>


            <Button

                android:id="@+id/info_addtocart"
                android:layout_width="110sp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iitem"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/scann_bg"
                android:elevation="0dp"
                android:text="添加购物车"
                android:textColor="#bb5a2c"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/info_fragment_goodinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/info_fragment_Content"
                android:layout_below="@+id/info_addtocart"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:text="产品信息:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/info_fragment_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/info_fragment_goodinfo"
                android:layout_margin="20dp"
                android:background="@drawable/write_bg"
                android:padding="10dp"
                android:text="@string/app_name"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="43dp"
                android:elevation="2dp"
                android:layout_alignTop="@+id/info_addtocart"
                android:layout_marginEnd="25dp"
                android:background="@drawable/write_bg"
                android:layout_toLeftOf="@+id/info_addtocart"
                android:layout_height="43dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/info_scanning"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_scanning"
                    android:gravity="center"
                    android:text="扫码购"
                    android:textSize="9sp" />

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>

